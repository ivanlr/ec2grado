<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ivanlr.ivanlr.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:maxLength="7"
        android:ems="10"
        android:id="@+id/etA"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:width="80dp"
        android:hint="Valor de A"
        android:phoneNumber="false"
        android:numeric="decimal"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_below="@+id/ecuacion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="14sp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="7"
        android:inputType="numberDecimal|numberSigned"
        android:ems="10"
        android:id="@+id/etB"
        android:width="80dp"
        android:hint="Valor de B"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
        android:layout_alignBottom="@+id/etA"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/etA" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:maxLength="7"
        android:ems="10"
        android:id="@+id/etC"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
        android:width="80dp"
        android:hint="Valor de C"
        android:layout_alignBaseline="@+id/etB"
        android:layout_alignBottom="@+id/etB"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp" />

    <TextView
        android:text="AxÂ²  + Bx + C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/ecuacion"
        android:autoText="false"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/btnCalcular"
        android:width="140dp"
        android:layout_below="@+id/etA"
        android:layout_centerHorizontal="true"
        android:password="false"
        style="@android:style/Widget.DeviceDefault.Button.Inset" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvResultado1"
        android:layout_alignLeft="@+id/tvResultado1"
        android:layout_alignStart="@+id/tvResultado1"
        android:id="@+id/tvResultado2"
        android:textSize="18sp" />

    <TextView
        android:text="Resultado1:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/tvResultado1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tvResultado1"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_height="20dp"
        android:autoText="false" />

    <TextView
        android:text="Resultado2:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/tvResultado1"
        android:layout_toLeftOf="@+id/tvResultado1"
        android:layout_toStartOf="@+id/tvResultado1"
        android:textSize="18sp" />


</RelativeLayout>
